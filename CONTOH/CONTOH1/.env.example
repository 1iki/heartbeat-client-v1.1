# ========================================
# üîß KONFIGURASI APLIKASI
# ========================================

# Port aplikasi
PORT=3000

# ========================================
# üóÑÔ∏è DATABASE - MongoDB
# ========================================
MONGODB_URI=mongodb://localhost:27017/monitoring

# ========================================
# üìä GOOGLE SHEETS INTEGRATION
# ========================================

# ID Spreadsheet Google Sheets
GOOGLE_SPREADSHEET_ID=1_yFrfNIlwRXPHBsmWo_gBuYxudstnOQeBfyk-YHWd1U

# Nama Sheet yang akan digunakan
GOOGLE_SHEET_NAME=FetchData

# PILIH SALAH SATU METODE AUTENTIKASI:

# Metode 1: Service Account (Recommended untuk private spreadsheet)
# Path ke file kredensial service account
GOOGLE_SERVICE_ACCOUNT_PATH=src/database/monitoring-tes.json

# Metode 2: API Key (Untuk public spreadsheet)
# GOOGLE_API_KEY=your-api-key-here

# ========================================
# ‚è±Ô∏è MONITORING CONFIGURATION
# ========================================

# Interval pengecekan otomatis (dalam milidetik)
# Default: 300000 = 5 menit
CHECK_INTERVAL=300000

# Timeout untuk HTTP request (dalam milidetik)
# Default: 30000 = 30 detik
REQUEST_TIMEOUT=30000

# ========================================
# üîê SECURITY
# ========================================

# Aktifkan CORS
CORS_ENABLED=true

# Allowed Origins (pisahkan dengan koma)
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ========================================
# üìù LOGGING
# ========================================

# Level logging: error, warn, info, debug
LOG_LEVEL=info

# Simpan log ke file
LOG_TO_FILE=true

# ========================================
# üé® OPTIONAL FEATURES
# ========================================

# Auto-sync dengan Google Sheets saat startup
AUTO_SYNC_ON_STARTUP=false

# Interval auto-sync (dalam milidetik, 0 = disabled)
# AUTO_SYNC_INTERVAL=3600000

# ========================================
# üöÄ PRODUCTION SETTINGS
# ========================================

# Environment mode
NODE_ENV=development

# Timezone
TZ=Asia/Jakarta
